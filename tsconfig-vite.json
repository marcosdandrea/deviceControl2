{
  "compilerOptions": {
    "outDir": "dist-react",
    "sourceMap": true,
    "module": "NodeNext",
    "jsx": "react",
    "noEmit": true,
    "composite": true,  
    "types": ["./types"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["src/common/*"],
      "@components/*": ["src/ui/components/*"],
      "@hooks/*": ["src/ui/hooks/*"],
      "@views/*": ["src/ui/views/*"],
      "@stores/*": ["src/ui/stores/*"],
      "@ipc/*": ["src/ui/ipc/*"],
      "@contexts/*": ["src/ui/contexts/*"]
    },
  },
  "include": ["src/ui", "src/common"],
}
