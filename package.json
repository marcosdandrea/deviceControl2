{
  "name": "devicecontrol",
  "private": true,
  "version": "2.0.0",
  "main": "dist-electron/main.js",
  "author": "Marcos D'Andrea",
  "description": "A simple device control app",
  "license": "MIT",
  "scripts": {
    "dev": "npm-run-all --parallel dev:react dev:electron ",
    "dev:react": "vite",
    "dev:electron": "node build-electron.mjs && cross-env NODE_ENV=development electron . --trace-warnings",
    "dev:headless": "npm-run-all --parallel dev:react dev:electron:headless",
    "dev:electron:headless": "cross-env HEADLESS=true node build-electron.mjs && cross-env NODE_ENV=development HEADLESS=true node . --trace-warnings",
    "build:vite": "vite build",
    "build:electron": "node build-electron.mjs",
    "preview": "vite preview",
    "clean:dist": "rimraf dist",
    "clean:electron": "rimraf dist-electron",
    "transpile:electron": "npm run clean:electron && npm run build:electron",
    "dist:mac": "npm run clean:dist && npm run transpile:electron && npm run build:vite && electron-builder --mac --arm64",
    "dist:win": "npm run clean:dist && npm run transpile:electron && npm run build:vite && electron-builder --win --x64",
    "dist:linux": "npm run clean:dist && npm run transpile:electron && npm run build:vite && electron-builder --linux --x64",
    "test:unit": "vitest src --reporter verbose"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dmxnet": "^0.9.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "ip": "^2.0.1",
    "middleware": "^1.0.0",
    "os-utils": "^0.0.14",
    "ping": "^0.4.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.7.1",
    "serialport": "^13.0.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/ip": "^1.1.3",
    "@types/node": "^22.15.19",
    "@types/os-utils": "^0.0.4",
    "@types/ping": "^0.4.4",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "cross-env": "^7.0.3",
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.15",
    "typescript": "^5.6.2",
    "vite": "^5.4.7",
    "vitest": "^2.1.9"
  }
}
