{
  "name": "devicecontrol",
  "private": true,
  "version": "2.0.97",
  "main": "dist-electron/main.js",
  "author": "Proyecciones Digitales",
  "description": "Device Control 2",
  "license": "MIT",
  "scripts": {
    "dev": "npm-run-all --parallel dev:react dev:electron ",
    "dev:react": "vite --host",
    "dev:electron": "node build-electron.mjs && cross-env NODE_ENV=development electron . --trace-warnings",
    "dev:headless": "npm-run-all --parallel dev:react dev:electron:headless",
    "dev:electron:headless": "cross-env HEADLESS=true node build-electron.mjs && cross-env NODE_ENV=development HEADLESS=true node . --trace-warnings",
    "build:vite": "vite build",
    "build:electron": "node build-electron.mjs",
    "preview": "vite preview",
    "clean:electron": "rimraf dist-electron",
    "version:patch": "npm version patch --no-git-tag-version",
    "transpile:electron": "npm run clean:electron && npm run build:electron",
    "dist:mac": "npm run version:patch && npm run transpile:electron && npm run build:vite && electron-builder --mac --arm64",
    "dist:win": "npm run version:patch && npm run transpile:electron && npm run build:vite && electron-builder --win --x64",
    "dist:linux": "npm run version:patch && npm run transpile:electron && npm run build:vite && electron-builder --linux --x64",
    "dist:raspberry": "npm run version:patch && npm run transpile:electron && npm run build:vite && electron-builder --linux --arm64",
    "dist:webpack": "npm run version:patch && node scripts/dist-webpack.mjs",
    "test:unit": "vitest src --reporter verbose"
  },
  "dependencies": {
    "antd": "^5.27.3",
    "array-move": "^4.0.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dmxnet": "^0.9.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "ip": "^2.0.1",
    "jszip": "^3.10.1",
    "middleware": "^1.0.0",
    "nanoid": "^5.1.5",
    "nodemailer": "^7.0.6",
    "os-utils": "^0.0.14",
    "ping": "^0.4.4",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-easy-sort": "^1.7.0",
    "react-icons": "^5.5.0",
    "react-resizable-panels": "^3.0.5",
    "react-router-dom": "^7.7.1",
    "serialport": "^13.0.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/ip": "^1.1.3",
    "@types/node": "^22.15.19",
    "@types/os-utils": "^0.0.4",
    "@types/ping": "^0.4.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "cross-env": "^7.0.3",
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.5.1",
    "tsc-alias": "^1.8.15",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.6.2",
    "vite": "^7.2.6",
    "vitest": "^4.0.15",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4",
    "webpack-obfuscator": "^3.5.1"
  }
}
